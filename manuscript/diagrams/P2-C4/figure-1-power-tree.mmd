  FUSE1 --> DC2[DC/DC 12V\n(Motors)]

  DC1 --> LOAD1[Compute & Sensors]
  DC2 --> LOAD2[Motor Drivers & Motors]

  classDef source fill=#e8f5e9,stroke:#2e7d32,stroke-width:1px;
  classDef protect fill=#fff3e0,stroke:#ef6c00,stroke-width:1px;
  classDef rail fill=#e3f2fd,stroke:#1565c0,stroke-width:1px;
  classDef load fill=#ede7f6,stroke:#5e35b1,stroke-width:1px;

  class BATT source;
  class BMS,SW,FUSE1 protect;
  class DC1,DC2 rail;
  class LOAD1,LOAD2 load;


